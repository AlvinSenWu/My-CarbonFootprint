<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/trip_list"
        android:layout_width="match_parent"
        android:layout_height="567dp"
        android:layout_weight="1">
    </ListView>


    <TextView
        android:id="@+id/DisplayListTotalFuelCost"
        android:layout_width="116dp"
        android:layout_height="36dp"
        android:text="Total Fuel Costs:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/trip_list"
        app:layout_constraintVertical_bias="0.815">

    </TextView>

    <TextView
        android:id="@+id/TotalFuelCostUpdate"
        android:layout_width="196dp"
        android:layout_height="36dp"
        android:layout_marginEnd="72dp"
        android:text="0.00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/DisplayListTotalFuelCost"
        app:layout_constraintTop_toTopOf="@+id/trip_list"
        app:layout_constraintVertical_bias="0.814" />

    <TextView
        android:layout_width="149dp"
        android:layout_height="35dp"
        android:id="@+id/TotalCF_text_in_list"
        android:text="Total Carbon Footprint:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DisplayListTotalFuelCost"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/CF_to_update"
        android:layout_width="163dp"
        android:layout_height="30dp"
        android:layout_marginEnd="80dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/trip_list"
        app:layout_constraintVertical_bias="0.867">

    </TextView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_add_trip"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.806"
        app:srcCompat="@android:drawable/ic_input_add" />

</androidx.constraintlayout.widget.ConstraintLayout>

